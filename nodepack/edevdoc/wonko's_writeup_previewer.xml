  <doctext>&lt;script language=&quot;JavaScript&quot; type=&quot;text/javascript&quot;&gt;
    function previewWriteup() {
        var strText, pos, endpos, pipepos, foo, pipeFoo, poo, poopoo;

        strText = document.getElementById(&quot;writeup&quot;).value;
        pos = 0;
        i = 1;
        do {
			i++;
			pos = strText.indexOf(String.fromCharCode(91), pos) + 1;
			
			if (pos &gt; -1) {
				endpos = strText.indexOf(String.fromCharCode(93), pos);
				foo = strText.substring(pos, endpos);
				
				poo = strText.substring(0, pos - 1);
				poopoo = strText.substring(endpos + 1, strText.length);
				
				pipepos = foo.indexOf(&quot;|&quot;);
				
				if (pipepos &gt; -1) {
					pipeFoo = foo.substring(0, pipepos);
					foo = foo.substring(pipepos + 1, foo.length);
					
					strText = poo + &quot;&lt;a href=\&quot;/index.pl?node=&quot; + pipeFoo + &quot;\&quot;&gt;&quot; + foo + &quot;&lt;/a&gt;&quot; + poopoo;
				} else {
					strText = poo + &quot;&lt;a href=\&quot;/index.pl?node=&quot; + foo + &quot;\&quot;&gt;&quot; + foo + &quot;&lt;/a&gt;&quot; + poopoo;
				}
				
				pos = endpos;
			}
		} while ((pos &gt; -1) );


        document.getElementById(&quot;poop&quot;).innerHTML = strText;
    }
&lt;/script&gt;

&lt;big&gt;&lt;big&gt;&lt;b&gt;Wonko's Writeup Previewer&lt;/b&gt;&lt;/big&gt;&lt;/big&gt;&lt;br&gt;
