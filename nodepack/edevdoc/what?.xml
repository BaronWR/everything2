  <doctext>&lt;SCRIPT LANGUAGE=&quot;VBScript&quot;&gt;
Function Crypt(Plaintext, Key)
    sPLen = Len(Plaintext)
    sCLen = Len(Key)
    
    If DontConvertToASCII = True Then
        Crypt = Plaintext Xor Key
        Exit Function
    End If
            
    For i = 1 To sPLen
        For x = 1 To sCLen
            If x = 1 Then
                y = Chr(Asc(GetChr(Plaintext, i)) Xor Asc(GetChr(Key, x)))
            Else
                y = Chr(Asc(y) Xor Asc(GetChr(Key, x)))
            End If
        Next
        x = 1
        If ReturnASCIIValues = False Then
            Crypt = Crypt &amp; y
        Else
            Crypt = Crypt &amp; &quot;/&quot; &amp; Asc(y)
        End If
    Next
End Function

Function GetChr(Text, Character)
    GetChr = Right(Left(Text, Character), 1)
End Function

Function ReplaceChr(Text, ReplaceWith, Character)
    w = Left(Text, Character)
    z = Right(Text, Len(Text) - Len(w))
    w = Left(w, Len(w) - 1) &amp; ReplaceWith
    
    ReplaceChr = w &amp; z
End Function

Sub CryptIt()
        MsgBox Crypt(crypt.cryptext.value, &quot;fishybrain&quot;)
        crypt.cryptext.value = &quot;&quot;
End sub
&lt;/SCRIPT&gt;

