  <code>my ($field, $rows, $cols, $wrap) = @_;
$cols ||= 80;
$rows ||= 30;
my $wrapSet = [ ];
$wrapSet = [ -wrap =&gt; $wrap ] if ($wrap);

my $name = $$NODE{type}{title} . &quot;_&quot; . $field;

return $query-&gt;textarea(
  -name       =&gt; $name
  , -id       =&gt; $name
  , -default  =&gt; $$NODE{$field}
  , -rows     =&gt; $rows
  , -columns  =&gt; $cols
  , @$wrapSet
  );
</code>
